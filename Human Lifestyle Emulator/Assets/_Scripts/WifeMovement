using UnityEngine;
using System.Collections;

public class WifeMovement : MonoBehaviour {

	public Vector3 Entrance = new Vector3(-28,11.34f,17);
	public Vector3 FristStop = new Vector3(-31,11.34f,25.5F);
	public Vector3 SecondStop = new Vector3(-15.5F,11.34f,30);
	public Vector3 ThirdStop = new Vector3(-12,11.34f,39);
	public Vector3 FourthStop = new Vector3(-23,11.34f,44.5F);
	public Vector3 Laststop = new Vector3(-36,11.34f,31);
	public float speed = .1f;
	public int count = 1;


	// Use this for initialization
	void Start () {

		transform.position = Entrance;
	}
	
	// Update is called once per frame
	void Update () {
			
		count++;

		if (count > 1 && count < 200)
		{
			transform.position = Vector3.MoveTowards(transform.position,FristStop,speed);
		}
		else if (count > 200 && count < 550)
		{
			transform.position = Vector3.MoveTowards(transform.position,SecondStop,speed);
		}
		else if (count > 550 && count < 750)
		{
			transform.position = Vector3.MoveTowards(transform.position,ThirdStop,speed);
		}
		else if (count > 750 && count < 1000)
		{
			transform.position = Vector3.MoveTowards(transform.position,FourthStop,speed);
		}
		else if (count > 1000 && count < 1200)
		{
			transform.position = Vector3.MoveTowards(transform.position,ThirdStop,speed);
		}
		else if (count > 1200 && count < 1400)
		{
			transform.position = Vector3.MoveTowards(transform.position,SecondStop,speed);
		}
		else if (count > 1400 && count < 1900)
		{
			transform.position = Vector3.MoveTowards(transform.position,Laststop,speed);
		}

		
	}
}
